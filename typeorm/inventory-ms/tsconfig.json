{
  "compilerOptions": {
    "lib": ["es2021"],
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "sourceMap": true
  }
}
